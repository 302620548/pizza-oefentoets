{% extends 'base.html.twig' %}
{% block title %} Home {% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-4">
            {% for klant in klanten %}
                <h3>{{ klant.naam }}</h3>
                {% for bestelling in klant.getBestellingen %}
                    {{ bestelling.datum|date("Y-m-d") }} <br>
                    {% for bestelregel in bestelling.getBestelregels %}
                        {{ bestelregel.aantal }}
                        {{ bestelregel.getPizzaId.naam }}
                    {% endfor %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>




{% endblock %}